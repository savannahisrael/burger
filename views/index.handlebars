<div class="container mb-4">

  <div class="row justify-content-center">
    {{!-- <img class="img-fluid" src="../public/assets/images/logo.jpg"><br> --}}
    <h3>Hipster Burgers</h3>
  </div>

  <div class="chalkboard pt-4 pb-4 mt-5 mb-5">


    <h2>Dope "Burgers"!</h2>


    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}

    <h2>Loser Burgers</h2>

    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}

  </div>

  <form class="create-form">
    <div class="form-group create-form">
      <div class="row justify-content-center">
        <label for="burger-name" class="col-form-label-lg "><h3>Create Your Own Burger, Champ!</h3></label>
        </div>
      <div class="col-md-8 offset-md-2 col-sm-12">
        <input type="text" class="form-control form-control-lg text-center" id="burger-name" placeholder="Burger Name">
      </div>
    </div>
    <div class="row justify-content-center">
    <button type="submit" class="btn btn-primary">Add "Burger"</button>
    </div>
  </form>


  
</div>